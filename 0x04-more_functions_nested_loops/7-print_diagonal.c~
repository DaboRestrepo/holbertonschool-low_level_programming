#include "main.h"
/**
 * print_diagonal - check the code
 * @n: variable # que se le da a la funci√≥n
 * Return: void
 */

void print_diagonal(int n)
{
int m;
int o;
for (m = 0; m < n; m++)
{
for (o = 0; o < m; o++)
{
putchar(' ');
}
putchar('\\');
putchar('\n');

if (n <= 0)
{
putchar('\n');
}
}
putchar('\n');
}
